    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:id="@+id/imgLogo"
        android:src="@drawable/databaseicon3"
        android:layout_gravity="left"
        android:foregroundGravity="left"
        android:background="@color/logoBackground"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:id="@+id/tvName"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textColor="@color/summary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myZone"
            android:id="@+id/tvMyZone"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/summary"/>
    </LinearLayout>

<!-- Title-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Schedule"
        android:id="@+id/textView3"
        android:gravity="left"
        android:textColor="@color/title"
        android:textSize="@dimen/title"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:textStyle="bold"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ccc"
            android:id="@+id/tvDate"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/summary"/>


        </LinearLayout>




    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_above="@+id/listView2day"
        android:layout_centerHorizontal="true"
        android:textColor="@color/summary"
        android:textColorHint="@color/summary"
        android:queryHint="search for show"
        android:theme="@color/summary"
        />



    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:layout_gravity="center_horizontal|bottom|left|right|top"
            android:layout_weight="0.84"
            android:clickable="true"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:textColor="@color/summary"
        android:divider="@color/summary"
        android:dividerHeight="2px"
        android:contextClickable="true" />

    </LinearLayout>



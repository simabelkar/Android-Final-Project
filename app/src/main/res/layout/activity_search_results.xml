<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:id="@+id/imgLogo"
        android:src="@drawable/databaseicon3"
        android:layout_gravity="left"
        android:foregroundGravity="left"
        android:background="@color/logoBackground"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myZone"
        android:id="@+id/tvMyZone"
        android:gravity="right"
        android:textColor="@color/summary"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleRes"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:layout_columnSpan="7"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/title"
        android:textColor="@color/title"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal|bottom|left|right|top"
        android:layout_weight="0.84"
        android:clickable="true"
        android:background="@drawable/border"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:textColor="@color/summary"
        android:divider="@color/summary"
        android:dividerHeight="2px"/>


</LinearLayout>


